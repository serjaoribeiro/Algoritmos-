algoritmo "Exercico 3"
// Peca ao usuario para digitar tres valores inteiros e imprima a soma deles
var
   N1, N2, N3, S: Inteiro

inicio
      escreval ("Digite um numero")
      leia (N1)
      escreval ("Digite outro numero")
      leia (N2)
      escreval ("Digite outro numero")
      leia (N3)
      S <- N1 + N2 + N3
      escreva("a soma entre eles e", S)
      

fimalgoritmo
